{
  "author": "deveth0 <amuthmann@dev-eth0.de>",
  "name": "esp32-hydroponics",
  "version": "1.0.0",
  "scripts": {
    "start": "rimraf dist && webpack serve --mode=development",
    "build": "rimraf dist && webpack --mode production",
    "deploy": "rimraf dist && webpack --mode production && platformio run --environment esp32dev --target upload && sleep 15 && platformio run --environment esp32dev --target uploadfs",
    "lint:scripts": "eslint \"web/**/*.ts\"",
    "lint:prettier": "npx prettier --check \"web/**/*.ts\"",
    "lint": "npm-run-all lint:prettier lint:scripts",
    "fix:scripts": "eslint  \"web/**/*.{js,ts}\" --fix",
    "fix:prettier": "npx prettier --write web/**/*.ts"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "autoprefixer": "^10.4.14",
    "change-case": "^4.1.2",
    "compression-webpack-plugin": "^10.0.0",
    "css-loader": "^6.7.3",
    "css-minimizer-webpack-plugin": "^5.0.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.7.5",
    "mocker-api": "2.9.5",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-loader": "^7.2.1",
    "prettier": "^2.8.7",
    "rimraf": "^4.4.1",
    "sass": "^1.60.0",
    "sass-loader": "^13.2.2",
    "style-loader": "^3.3.2",
    "tailwindcss": "^3.3.1",
    "terser-webpack-plugin": "^5.3.7",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.3",
    "webpack": "^5.77.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.13.2"
  },
  "dependencies": {
    "lit": "^2.7.1"
  }
}
